
@model WebApplicationDemo.Models.FacebookProfileModels
@{
    ViewBag.Title = "ProfileView";
}

<h2>Profile</h2>

@*<p>@Html.Raw(ViewBag.JSON)</p>*@
<div class="profile-info page-content">
    @if (Request.IsAuthenticated)
    {
        <form action="@Url.Action("SaveProfile", "Facebook")" method="post">
            <input class="form-control" type="hidden" name="id" value="@Model.id" />
            <div class="form-group">
                <label>First Name:</label>
                <input class="form-control" type="text" name="first_name" value="@Model.first_name" />
            </div>

            <div class="form-group">
                <label>Last Name:</label>
                <input class="form-control" type="text" name="last_name" value="@Model.last_name" />
            </div>
            <div class="form-group">
                <label>E-mail:</label>
                <input class="form-control" type="email" name="email" value="@Model.email" />
            </div>
            <button type="submit" class="btn btn-success">Save</button>

        </form>
    }
    else
    {
        <div class="alert alert-danger">Permission denied!!!</div>
    }
</div>

