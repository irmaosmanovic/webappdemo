<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="fb-navigation navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Facebook Demo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                <ul class="fb-nav-list nav navbar-nav">
                    <li><a title="Home" href="@Url.Action("Index", "Home")"><span><i class="glyphicon glyphicon-home"></i></span></a></li>
                    <li><a title="Posts" href="@Url.Action("PostsView", "Facebook")"><span><i class="glyphicon glyphicon-th-large"></i></span></a></li>
                    <li><a title="Profile" href="@Url.Action("ProfileView", "Facebook")"><span><i class="glyphicon glyphicon-user"></i></span></a></li>
                </ul>
                }
                else
                {
                    <ul class="fb-nav-list nav navbar-nav">
                        @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                        <li><a title="Home" href="@Url.Action("Index", "Home")"><span><i class="glyphicon glyphicon-home"></i></span></a></li>
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="body-content">
        <div class="container">
            @RenderBody()
            <hr />
        </div>
        <div class="fb-footer">
            <p>&copy; @DateTime.Now.Year - Irma Osmanović</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
